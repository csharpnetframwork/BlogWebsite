@model List<BlogWebsite.Models.Domains.BlogPost>
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>All Blog Post </h1>
    </div>
</div>

<div class="container py-5">
    <table class="table">
        <thead>
            <tr><td>Heading</td>
            <td>Heading</td>
            <td>Tag</td>
            <td> </td>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var blogpst in Model)
            {    <tr>
                    <td>@blogpst.ID</td>
                    <td>@blogpst.Heading</td>
                    <td>
                        <div class="d-flex">
                            @foreach(var tag in blogpst.Tags)
                            {
                                <span class="badge bg-secondary me-1" >@tag.Name</span>
                            }
                        </div>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="AddNewBlog" asp-action="Edit" asp-route-id="@blogpst.ID">
                            Edit
                        </a>
                    </td>
            </tr>
                
            }
        </tbody>
    </table>
</div>
