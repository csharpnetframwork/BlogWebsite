@model BlogWebsite.Models.ViewModels.EditTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tags</h1>
    </div>
</div>
<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="text" class="form-control" id="id" readonly asp-for="Id" />
            </div>
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name" />
            </div>

            <div class="mb-3">
                <label class="form-label">DisplayName</label>
                <input type="text" class="form-control" id="DisplayName" asp-for="DisplayName" />
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-dark  ms-2">Update</button>
                <button class="btn btn-danger" asp-area="" asp-controller="AddBlog" asp-action="Delete">
                    Delete
                </button>
            </div>


        </form>
    }
    else
    {
        <p>
            Tag not found!
        </p>
    }

</div>
